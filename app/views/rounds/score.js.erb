
<% if @ret.present? %>
  $("#ball2").addClass("hidden").html("")
  $("#ball1").removeClass("hidden").html("<%= escape_javascript(render('shared/scored_ball', balls: @ret[:balls])) %>")
  
  <% if @ret[:has_new_ball] %>
    $("#score-animation").removeClass("hidden").queue(function() {
      $('.dark-screen').addClass('animated fadeIn').dequeue();
      $('.score-message').addClass('animated bounceIn delay1s').dequeue();
    });
  
  <% end %>
  
  <% if @has_all_ball %>
  
  <% end %>
<% else %>
  $("#ball1").addClass("hidden").html("")
  $("#ball2").removeClass("hidden").html("no ball")
<% end %>
