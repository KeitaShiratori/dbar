<div class="row">
  <div class="col-md-4">
    <%= render 'shared/user_card' %>
  </div>
  <div class="col-md-8">
    <%= render 'shared/join_list', user: @user %>
    <%= render 'shared/history_list', user: @user %>
  </div>
</div>

<script>
  $(".nav_menu").removeClass("active");
  <% if current_user == @user %>
    $("#my_page").addClass("active"); 
  <% else %>
    $("#other_page").removeClass("hidden").addClass("active"); 
  <% end %>
</script>